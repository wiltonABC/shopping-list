@{

    ViewData["Title"] = "Shopping Lists - Create";
}

@section Scripts {

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.css" />
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/base/jquery-ui.min.css"
              asp-fallback-href="~/lib/jquery-ui/themes/base/jquery-ui.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js"
                asp-fallback-src="~/lib/jquery-ui/jquery-ui.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-Dziy8F2VlJQLMShA6FHWNul/veM9bCkRUaLqr199K94ntO5QUrLJBEbYegdSkkqX"></script>
    </environment>

    <script>$(function () {
            $('#shoppingDate').datepicker();
        });</script>

}

<h2 class="mt-4">Shopping List Creation Form</h2>

<form asp-action="Save" method="post">
    <div class="form-group">

        @{ await Html.RenderPartialAsync("Forms/_ShoppingListsFormPartial"); }

    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>