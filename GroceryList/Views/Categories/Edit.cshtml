@{

    ViewData["Title"] = "Product Categories - Edit";

}

@model Category;

<h2 class="mt-4">Category Editing Form</h2>

<form asp-action="Update" method="post" >
    <input type="hidden" asp-for="@Model.Id" id="categoryId" value="@Model.Id" />

    @{ await Html.RenderPartialAsync("Forms/_CategoriesFormPartial"); }

    <button type="submit" class="btn btn-primary">Save</button>
</form>