@{

    ViewData["Title"] = "Products - Edit";
}

@model Product;

<h2 class="mt-4">Product Editing Form</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="@Model.Id" id="productId" value="@Model.Id" />

    @{ await Html.RenderPartialAsync("Forms/_ProductsFormPartial"); }

    <button type="submit" class="btn btn-primary">Save</button>
</form>